{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["dom", "es2015", "es2016"],
        "sourceMap": false,
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "outDir": "lib",
        "noUnusedLocals": false,
        "downlevelIteration": true
    },
    "exclude": ["node_modules", "static", "lib"],
    "include": ["src/**/*.ts"]
}
