{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@common/*": ["common/*"],
            "@configs/*": ["configs/*"],
            "@handlers/*": ["handlers/*"],
            "@helpers/*": ["helpers/*"]
        },
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["dom", "es2015", "es2016"],
        "sourceMap": false,
        "declaration": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "noUnusedLocals": false,
        "downlevelIteration": true
    },
    "exclude": ["node_modules", "static", "lib"],
    "include": ["src", "src/**/*.ts"]
}
