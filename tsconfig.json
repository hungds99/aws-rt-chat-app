{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@libs/*": ["libs/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@validations/*": ["validations/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"]
    },
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es5",
    "lib": ["dom", "es2015", "es2016"],
    "sourceMap": false,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "noUnusedLocals": false,
    "downlevelIteration": true
  },
  "exclude": ["node_modules", "static", "lib"],
  "include": ["src", "src/**/*.ts"]
}
